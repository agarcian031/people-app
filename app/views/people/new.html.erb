<h1>Add A Person</h1>
<h4>Fill in data for new person:</h4>
<hr>
<%= form_for @person do |f| %>
<div>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
</div>

<div>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
</div>

<div>
  <%= f.label :age %>
  <%= f.text_field :age %>
</div>

<div>
  <%= f.label :gender %>
  <%= f.text_field :gender %>
</div>

<div>
  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>
</div>

<div>
  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>
</div>

<div>
  <%= f.label :alive %>
  <%= f.check_box :alive %>
<div>
  <%= f.submit class:'btn teal lighten-2 white-text hoverable'%>
<% end %>
